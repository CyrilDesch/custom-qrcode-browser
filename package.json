{
  "name": "custom-qrcode-browser",
  "version": "0.0.1",
  "description": "Library to generate customizable QR code in browser",
  "workspaces": [
    "react",
    "angular"
  ],
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist/",
    "types/"
  ],
  "exports": {
    ".": [
      {
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs",
        "default": "./dist/index.js"
      },
      "./dist/index.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^3.29.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.1",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.1",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.5"
  },
  "scripts": {
    "doc": "typedoc src/QrCodeGenerator.ts",
    "start": "vite dev",
    "test": "jest",
    "lint": "eslint \"*/**/*.{ts,js,json}\"",
    "lint:fix": "eslint \"*/**/*.{ts,js,json}\" --fix",
    "build": "rollup --config ./rollup.config.mjs",
    "prepublishOnly": "npm run doc && npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CyrilDesch/custom-qrcode-browser.git"
  },
  "keywords": [],
  "author": {
    "name": "Cyril Deschamps"
  },
  "type": "module",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CyrilDesch/custom-qrcode-browser/issues"
  },
  "homepage": "https://github.com/CyrilDesch/custom-qrcode-browser#readme",
  "dependencies": {
    "@zxing/library": "^0.21.3"
  }
}
